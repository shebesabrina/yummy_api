<!DOCTYPE html> 
<html> 
<head> 
	<title>Page Layout</title> 
    <link rel="stylesheet" href="styles.css">
</head> 

<body> 
	
	<!-- Header Section -->
	<header> 
		<div class="head-1">Yummy Recipes</div> 
		<div class="head-2">A recipe portal for food nerds</div> 
	</header> 
	
	<!-- Menu Navigation Bar -->
	<div class="menu"> 
		<a href="#home">HOME</a> 
		<a href="#news">NEWS</a> 
		<a href="#notification">NOTIFICATIONS</a> 
		<div class="menu-log"> 
			<a href="#login">LOGIN</a> 
		</div> 
	</div> 
	
	<!-- Body section -->
	<div class = "all-recipes"> 
		<section> 
			<h3>Recipes!!</h3> 
            <div><% @recipes.each do |recipe| %></div>
            <div class="recipe-title"><%= recipe["title"]%></div>
            <div class="recipe-image"><%= image_tag recipe["image"] %></div>
            <div><% end %></div>
		</section> 
	</div> 
	<!-- Footer Section -->
	<footer>Footer Section</footer> 
</body> 
</html>					 
